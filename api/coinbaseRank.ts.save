// api/coinbaseRank.ts
import type { VercelRequest, VercelResponse } from '@vercel/node';

const APPLE_FEED =
  'https://rss.applemarketingtools.com/api/v2/us/apps/top-free/200/finance.json';
const COINBASE_APP_ID = '886427730';

export default async function handler(_: VercelRequest, res: VercelResponse) {
  try {
    const r = await fetch(APPLE_FEED);
    if (!r.ok) throw new Error('Apple feed failed');
    const data = await r.json();
    const coinbase = data.feed?.results?.find((a: any) => a.id === COINBASE_APP_ID);
    const rank = coinbase ? data.feed.results.indexOf(coinbase) + 1 : null;
    res.setHeader('Cache-Control', 's-maxage=300, stale-while-revalidate');
    res.status(200).json({ rank });
  } catch (err: any) {
    res.status(500).json({ error: err.message });
  }
}

